#include <iostream>
#include <vector>
using namespace std;

vector<int> sieve(int n) {
    vector<bool> prime(n + 1, true);
    vector<int> primes;
    prime[0] = prime[1] = false;

    for (int i = 2; i * i <= n; i++) {
        if (prime[i]) {
            for (int j = i * i; j <= n; j += i)
                prime[j] = false;
        }
    }

    for (int i = 2; i <= n; i++) {
        if (prime[i]) primes.push_back(i);
    }
    return primes;
}

int main() {
    int n;
    cout << "enter the numbers to factorize: ";
    cin >> n;

    vector<int> primes = sieve(n);
    cout << "Разложение числа " << n << ": ";

    for (int p : primes) {
        if (p * p > n) break;
        int count = 0;
        while (n % p == 0) {
            n /= p;
            count++;
        }
        if (count > 0)
            cout << p << "^" << count << " ";
    }

    if (n > 1) cout << n << "^1"; 

    return 0;
}